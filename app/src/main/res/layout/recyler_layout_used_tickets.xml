<?xml version="1.0" encoding="utf-8"?>


<!--  Used Ticket card -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/rounded_edittext_bg"
    android:backgroundTint="#FFDCA7"
    android:elevation="20dp"
    android:orientation="vertical"
    android:paddingHorizontal="25dp"
    android:paddingTop="25dp"
    android:paddingBottom="20dp">


    <TextView
        android:id="@+id/routeNameNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="120 | Maharagama - Colombo New Road"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fromTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="From: Maharagama bus stand"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/toTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="To: Colombo campus"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/purchasedDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Purchased on: 26.12.2023"
        android:textSize="14sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Redeemed"
                android:textColor="#CA5454"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/redeemedDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="on: 26.12.2023"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/ticketPriceTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            android:text="Rs. 20.00"
            android:textSize="22sp"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>