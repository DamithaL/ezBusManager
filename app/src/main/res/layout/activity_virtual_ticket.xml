<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.virtualTicket"
    android:background ="#A1A1A1"
    >



    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">



            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_qr_rounded"
                app:srcCompat="@drawable/frame"
                android:gravity="center"

                />

        </TableRow>
        <!-- Additional TableRow for the Banner -->

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bannerTableRow"
            android:layout_span="2"
            android:padding="10dp"
            android:background="@color/colorWhite"

            > <!-- Initially set to gone -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >



                <TextView
                    android:id="@+id/bannerText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:gravity="left"
                    android:padding="8dp"
                    android:text="120 Horana - Colombo"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"

                    />

                <TextView
                    android:id="@+id/bannerText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:gravity="left"
                    android:padding="8dp"
                    android:text="Rs. 32"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    />

                <TextView
                    android:id="@+id/bannerText3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:gravity="left"
                    android:padding="8dp"
                    android:text="From place A to place B"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    />

                <TextView
                    android:id="@+id/bannerText31"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:gravity="left"
                    android:padding="8dp"
                    android:text="1 person"
                    android:textColor="@color/black"
                    />



            </LinearLayout>

        </TableRow>
    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>






