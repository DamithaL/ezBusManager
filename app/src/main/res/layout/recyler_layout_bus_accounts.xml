<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/rounded_edittext_bg"
    android:backgroundTint="@color/purple_100"
    android:elevation="10dp"
    android:padding="20dp">


    <!-- Bus Icon -->
    <ImageView
        android:id="@+id/busImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_bus" />

    <!-- Text Lines -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/busImageView"
        android:orientation="vertical"
        android:paddingStart="20dp">

        <!-- Nick name -->
        <TextView
            android:id="@+id/busNickNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:text="my bus 1 58"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Route number | Route Name -->
        <TextView
            android:id="@+id/routeNameNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="120 | Maharagama - Colombo New Road"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Bus Number -->
        <TextView
            android:id="@+id/busNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="NB-1234"
            android:textSize="16sp" />

        <!-- Emergency number -->
        <TextView
            android:id="@+id/emergencyNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="077-1234567"
            android:textSize="16sp" />


    </LinearLayout>


</RelativeLayout>