<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/rounded_edittext_bg"
    android:backgroundTint="@color/gray100"
    android:elevation="20dp"
    android:padding="20dp">

    <!-- Bus Icon -->
    <ImageView
        android:id="@+id/busImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_bus" />

    <!-- Text Lines -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/busImageView"
        android:orientation="vertical"
        android:paddingStart="20dp">

        <!-- 1st Text Line - Nick name | Bus Number -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/busImageView"
            android:orientation="horizontal"

            android:weightSum="2">

            <!-- Nick name -->
            <TextView
                android:id="@+id/busNickNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="my bus 1 5846545465465465465456465"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Bus Number -->
            <TextView
                android:id="@+id/busNumberTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:text="NB-1234"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- 2nd Text Line - Route number | Route Name -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/busImageView"
            android:orientation="horizontal"
            android:weightSum="3">

            <!-- Route number -->
            <TextView
                android:id="@+id/routeNumberTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="my bus 1 5846545465465465465456465"
                android:textSize="16sp" />

            <!-- Route Name -->
            <TextView
                android:id="@+id/routeNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_weight="2"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:text="NB-1234"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- 3rd Text Line - Emergency number -->
        <TextView
            android:id="@+id/emergencyNumberTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="077-1234567"
            android:textSize="16sp" />

    </LinearLayout>


</RelativeLayout>