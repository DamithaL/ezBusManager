<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_dialog_bg"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/dialogContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_margin="30dp"
            android:src="@drawable/ic_successful"/>

        <TextView
            android:id="@+id/messageTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#333333"
            android:text="@string/login_results_welcome_text_2"
            android:textSize="16sp" />

        <!-- Welcome text 1       -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:gravity="center"
            android:text="@string/login_results_welcome_text_1"
            android:textStyle="bold" />

        <!-- Welcome text 1       -->
        <TextView
            android:id="@+id/userNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginBottom="30dp"
            android:textSize="18sp"
            android:gravity="center"
            android:text="Our Beloved User"
            android:textStyle="bold" />


    </LinearLayout>
</RelativeLayout>
